{
  "manifest_version": 2,
  "name": "SpotTube",
  "version": "1.1",
  "description": "get the youtube link for your current tab, such as spotify",
  "permissions": ["tabs", "clipboardWrite"],
  "applications": {
    "gecko": {
      "id": "spottube@riseup.net"
    }
  },

  "background": {
    "scripts": ["browser-polyfill.js", "background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "SpotTube"
  }
}
